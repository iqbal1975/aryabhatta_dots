* {
  all: unset;
  font-size: 15px;
  font-family: "JetBrainsMono Nerd Font";
  transition: 200ms;
}

.notifications.background
  .notification-row
  .notification-background {
  box-shadow:
    0 0 5px 0 rgba(0, 0, 0, 0.8),
    inset 0 0 0 1px #313244;
  border-radius: 12px;
  margin: 15px;
  background-color: #1e1e2e;
  color: #cdd6f4;
  padding: 0;
}

.notifications.background
  .notification-row
  .notification-background
  .notification {
  padding: 5px;
  border-radius: 12px;
}

.notifications.background
  .notification-row
  .notification-background
  .notification.critical {
  box-shadow: inset 0 0 5px 0 #f38ba8;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content {
  margin: 5px;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content
  .summary {
  color: #cdd6f4;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content
  .time {
  color: #a6adc8;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  .notification-content
  .body {
  color: #cdd6f4;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > * {
  min-height: 3em;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action {
  border-radius: 5px;
  color: #cdd6f4;
  background-color: #313244;
  box-shadow: inset 0 0 0 1px #45475a;
  margin: 5px;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:hover {
  box-shadow: inset 0 0 0 1px #45475a;
  background-color: #313244;
  color: #cdd6f4;
}

.notifications.background
  .notification-row
  .notification-background
  .notification
  > *:last-child
  > *
  .notification-action:active {
  box-shadow: inset 0 0 0 1px #45475a;
  background-color: #74c7ec;
  color: #cdd6f4;
}

.notifications.background
  .notification-row
  .notification-background
  .close-button {
  margin: 5px;
  padding: 2px;
  border-radius: 6px;
  color: #1e1e2e;
  background-color: #f38ba8;
}

.notifications.background
  .notification-row
  .notification-background
  .close-button:hover {
  background-color: #eba0ac;
  color: #1e1e2e;
}

.notifications.background
  .notification-row
  .notification-background
  .close-button:active {
  background-color: #f38ba8;
  color: #1e1e2e;
}

.control-center {
  box-shadow:
    0 0 5px 0 rgba(0, 0, 0, 0.8),
    inset 0 0 0 1px #313244;
  border-radius: 12px;
  margin: 15px;
  background-color: #1e1e2e;
  color: #cdd6f4;
  padding: 10px;
}

.control-center .widget-title {
  color: #cdd6f4;
  font-size: 1.2em;
}

.control-center .widget-title button {
  border-radius: 5px;
  color: #cdd6f4;
  background-color: #313244;
  box-shadow: inset 0 0 0 1px #45475a;
  padding: 5px;
}

.control-center .widget-title button:hover {
  box-shadow: inset 0 0 0 1px #45475a;
  background-color: #585b70;
  color: #cdd6f4;
}

.control-center .widget-title button:active {
  box-shadow: inset 0 0 0 1px #45475a;
  background-color: #74c7ec;
  color: #1e1e2e;
}

