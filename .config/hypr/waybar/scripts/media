## Script for Media for Waybar

# player_status=$(playerctl status 2> /dev/null)
player_status=$(playerctl metadata --format '{{playerName}}: {{lc(status)}}' 2>/dev/null)

if [ "$player_status" = "spotify: playing" ]; then
	echo -e "ï†¼ ïŠ‹ $(playerctl metadata artist) - $(playerctl metadata title)\nPlaying: $(playerctl metadata artist) - $(playerctl metadata title)\nplaying"
elif [ "$player_status" = "spotify: paused" ]; then
	echo -e "ï†¼ ï…„ $(playerctl metadata artist) - $(playerctl metadata title)\nPaused: $(playerctl metadata artist) - $(playerctl metadata title)\npaused"
elif [ "$player_status" = "brave: playing" ]; then
	echo -e "ğŸœ ïŠ‹ $(playerctl metadata artist) - $(playerctl metadata title)\nPlaying: $(playerctl metadata artist) - $(playerctl metadata title)\nplaying"
elif [ "$player_status" = "brave: paused" ]; then
	echo -e "ğŸœ ï…„ $(playerctl metadata artist) - $(playerctl metadata title)\nPaused: $(playerctl metadata artist) - $(playerctl metadata title)\npaused"
elif [ "$player_status" = "chromium: playing" ]; then
	echo -e "ğŸœ ïŠ‹ $(playerctl metadata artist) - $(playerctl metadata title)\nPlaying: $(playerctl metadata artist) - $(playerctl metadata title)\nplaying"
elif [ "$player_status" = "chromium: paused" ]; then
	echo -e "ğŸœ ï…„ $(playerctl metadata artist) - $(playerctl metadata title)\nPaused: $(playerctl metadata artist) - $(playerctl metadata title)\npaused"
else
	echo -e "ï¢‰ Player Offline!\nPlayer Offline.\noffline"
fi
